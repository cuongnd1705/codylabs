{
  "name": "codylabs",
  "description": "Cody's Labs",
  "homepage": "https://github.com/cuongnd1705/codylabs#readme",
  "bugs": {
    "url": "https://github.com/cuongnd1705/codylabs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cuongnd1705/codylabs.git"
  },
  "license": "MIT",
  "author": {
    "name": "Cody Nguyen",
    "email": "cuongnd.work@gmail.com"
  },
  "scripts": {
    "build": "turbo build",
    "clean": "rm -rf .turbo node_modules",
    "dev": "turbo dev",
    "format:check": "prettier --check --no-error-on-unmatched-pattern 'packages/**/*.{ts,js,json,*rc}'",
    "format:write": "prettier --write --no-error-on-unmatched-pattern 'packages/**/*.{ts,js,json,*rc}'",
    "lint:check": "eslint \"packages/**/*.ts\"",
    "lint:fix": "eslint \"packages/**/*.ts\" --fix",
    "prepare": "husky",
    "publish-packages": "turbo run build biome:check && changeset version && changeset publish",
    "test": "turbo test"
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "pnpm lint:fix"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.19.0",
    "@nestjs/common": "^11.0.7",
    "@nestjs/core": "^11.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@typescript-eslint/parser": "^8.23.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "turbo": "^2.4.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20"
  }
}
